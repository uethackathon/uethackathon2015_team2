<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thoi_khoa_bieu"
        android:gravity="center_horizontal"
        android:id="@+id/txtTitleThoiKhoaBieu"
        android:textSize="25sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/itemNone"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="T2"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="T3"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="T4"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="T5"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="T6"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="T7"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:id="@+id/colTime">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="7.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="8.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="9.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="10.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="11.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="12.00"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="13.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="14.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="15.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="16.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_item_subject"
                    android:text="17.00"
                    />
            </LinearLayout>

            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gridSubject"
                android:numColumns="6"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>